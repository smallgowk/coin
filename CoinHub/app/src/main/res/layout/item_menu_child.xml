<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="57.5dp">


    <LinearLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="35.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="17dp">

        <!--<ImageView-->
            <!--android:id="@+id/menuIcon"-->
            <!--android:layout_width="17.3dp"-->
            <!--android:layout_height="17.3dp"-->
            <!--android:layout_marginRight="17dp" />-->

        <com.phanduy.view.custom.TextViewWithFont
            android:id="@+id/menuTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#66FFFFFF"
            android:textSize="13.5dp"
            font:name="Roboto-Regular.ttf" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="22dp">


        <ImageView
            android:id="@+id/btnExpand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/selector_icon_fullmenu_expander"
            android:visibility="invisible" />

    </RelativeLayout>


</LinearLayout>