<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_account"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onClickBack"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/drawable_transparent_press_circle"
            >

            <ImageView
                android:id="@+id/icon_header_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:tint="@color/white" />

        </RelativeLayout>

        <com.phanduy.view.custom.TextViewWithFont
            android:id="@+id/txtTitleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/accountTitleInfo"
            android:textColor="@color/white"
            android:textSize="16sp"
            font:type="1" />

        <RelativeLayout
            android:id="@+id/btnRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onClickRight"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@drawable/drawable_transparent_press_circle"
            >

            <ImageView
                android:id="@+id/icon_header_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:tint="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/deviderHeader"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff69c7d1"
        android:layout_below="@+id/layoutHeader"
        />

    <com.gc.materialdesign.views.ScrollView
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/deviderHeader"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:onClick="onClickChangeName"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_person"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >
                    <com.phanduy.view.custom.TextViewWithFont
                        android:id="@+id/txtNameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/accountTitleAccount"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        font:type="1" />
                    <com.phanduy.view.custom.TextViewWithFont
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#8ff2ff"
                        android:textSize="13sp"
                        font:type="1" />
                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_marginRight="32dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:layout_height="34dp"
                        android:hint="@string/accountTitleAccountHint"
                        android:visibility="gone"
                        android:background="@drawable/drawable_edt_account"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff69c7d1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:onClick="onClickChangePhone"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_phone"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >
                    <com.phanduy.view.custom.TextViewWithFont
                        android:id="@+id/textPhoneTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/accountTitlePhone"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        font:type="1" />
                    <com.phanduy.view.custom.TextViewWithFont
                        android:id="@+id/txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#8ff2ff"
                        android:textSize="13sp"
                        font:type="1" />
                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="match_parent"
                        android:layout_marginRight="32dp"
                        android:hint="@string/accountTitlePhoneHint"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:layout_height="34dp"
                        android:visibility="gone"
                        android:background="@drawable/drawable_edt_account"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff69c7d1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:onClick="onClickChangeEmail"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_mail"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >
                    <com.phanduy.view.custom.TextViewWithFont
                        android:id="@+id/txtEmailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/accountTitleEmail"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        font:type="1" />
                    <com.phanduy.view.custom.TextViewWithFont
                        android:id="@+id/txtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#8ff2ff"
                        android:textSize="13sp"
                        font:type="1" />
                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_marginRight="32dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:layout_height="34dp"
                        android:hint="@string/accountTitleEmailHint"
                        android:visibility="gone"
                        android:background="@drawable/drawable_edt_account"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff69c7d1"
                />
            <LinearLayout
                android:id="@+id/layoutChangePassword"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:onClick="onClickChangePassword"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_key"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >
                    <com.phanduy.view.custom.TextViewWithFont
                        android:id="@+id/txtTitleChangePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/accountTitleChangePassword"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        font:type="1" />
                    <com.phanduy.view.custom.TextViewWithFont
                        android:id="@+id/txtChangePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Thay đổi mật khẩu hiện tại"
                        android:textColor="#8ff2ff"
                        android:textSize="13sp"
                        font:type="1" />
                    <EditText
                        android:id="@+id/edtCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_marginRight="32dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:layout_height="34dp"
                        android:inputType="textPassword"
                        android:hint="@string/accountCurrentPasswordHint"
                        android:visibility="gone"
                        android:background="@drawable/drawable_edt_account"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/deviderChanePassword"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff69c7d1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:id="@+id/layoutNewPassword"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_key"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >
                    <EditText
                        android:id="@+id/edtNewPassword"
                        android:layout_width="match_parent"
                        android:layout_marginRight="32dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:layout_height="34dp"
                        android:textColor="@color/white"
                        android:hint="@string/accountNewPasswordHint"
                        android:inputType="textPassword"
                        android:background="@drawable/drawable_edt_account"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/deviderNewPassword"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff69c7d1"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/layoutConfirmNewPass"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_key"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    >
                    <EditText
                        android:id="@+id/edtConfirmNewPassword"
                        android:layout_width="match_parent"
                        android:layout_marginRight="32dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:layout_height="34dp"
                        android:hint="@string/accountConfirmNewPasswordHint"
                        android:inputType="textPassword"
                        android:background="@drawable/drawable_edt_account"
                        android:textColor="@color/white"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/deviderConfirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff69c7d1"
                android:visibility="gone"
                />
        </LinearLayout>
    </com.gc.materialdesign.views.ScrollView>

    <RelativeLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHeader"
        android:background="#44000000"
        android:visibility="gone">

        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
            android:id="@+id/progressBarCircularIndeterminate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@color/white" />
    </RelativeLayout>

</RelativeLayout>