<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/inbox_width_delete"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:id="@+id/layoutFront"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inbox_width_delete"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:tag="front" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/avatarBaby"
                android:layout_width="@dimen/babySize"
                android:layout_height="@dimen/babySize"
                android:src="@drawable/icon_device"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.phanduy.view.custom.TextViewWithFont
                    android:id="@+id/txtDeviceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/APP_NAME"
                    android:textColor="@color/white"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    font:type="4" />
                <com.phanduy.view.custom.TextViewWithFont
                    android:id="@+id/txtDeviceAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/APP_NAME"
                    android:textColor="@color/main_tittle"
                    android:layout_marginLeft="8dp"
                    android:textSize="14sp"
                    font:type="4" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>