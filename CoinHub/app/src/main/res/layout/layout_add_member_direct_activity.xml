<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/layout_header_second"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_less"
        android:padding="@dimen/margin_edt"
        >
        <EditText
            android:id="@+id/edtName"
            style="@style/EdittextStyle"
            android:hint="Họ tên"
            />
        <EditText
            android:id="@+id/edtPhone"
            style="@style/EdittextStyle"
            android:hint="Số điện thoại"
            android:layout_marginTop="@dimen/margin_item"
            />
        <RelativeLayout
            android:id="@+id/btnCreateGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickAddMember"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/drawable_button_login"
            android:layout_marginTop="@dimen/margin_edt"
            >
            <TextView
                android:id="@+id/txtBtnBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Thêm thành viên trực tiếp"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>